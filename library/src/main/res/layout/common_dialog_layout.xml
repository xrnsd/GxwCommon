<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/common_diglog_bg">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="提示"
        android:visibility="visible"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:background="@color/dialog_sport_end_line_color"-->
    <!--android:id="@+id/title_line"/>-->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/message"
          android:layout_gravity="center"
          android:gravity="center"
          android:lineSpacingExtra="5px"
          android:minHeight="60dp"
          android:textSize="16sp"
          android:text="aaaaaa"
          android:textColor="@color/black"/>
             
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dialog_sport_end_line_color"
        android:id="@+id/titlebar_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

      <Button
          android:id="@+id/negativeButton"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/cancel"
          android:textColor="@color/dialog_sport_end_text_color"
          android:textSize="17sp"
          android:layout_weight="1"
          android:background="@color/translate"
          android:textAllCaps="false"/>
      <View
          android:layout_width="0.5dp"
          android:layout_height="match_parent"
          android:background="@color/dialog_sport_end_line_color"
          android:id="@+id/bottom_line"/>
      <Button
          android:id="@+id/positiveButton"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/sure"
          android:textSize="17sp"
          android:textColor="@color/dialog_sport_end_text_color"
          android:layout_weight="1"
          android:background="@color/translate"
          android:textAllCaps="false"/>
    </LinearLayout>
  </LinearLayout>
</FrameLayout>